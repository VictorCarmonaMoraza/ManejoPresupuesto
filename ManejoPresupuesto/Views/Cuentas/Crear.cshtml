@model CuentaCreacionViewModel
@{
    ViewData["Title"] = "Crear Cuenta";
}

<h1>@ViewData["Title"]</h1>
<h5>
    La cuenta se refiere a los distintos balances que tienes:
    tarjeta de crédito, cuenta de ahorros, cuenta corriente, etc.
</h5>

<form asp-action="Crear">
    <div asp-asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control"/>
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TipoCuentaId" class="form-label"></label>
        <select asp-for="TipoCuentaId" class="form-select">
            <option value="">Seleccione un tipo de cuenta</option>
            @foreach (var tipoCuenta in Model.TiposCuentas)
            {
                <option value="@tipoCuenta.Value">@tipoCuenta.Text</option>
            }
        </select>
        <span asp-validation-for="TipoCuentaId" class="text-danger"></span>
    </div>


    <div class="mb-3">
        <label asp-for="Balance" class="form-label"></label>
        <input asp-for="Balance" class="form-control" />
        <span asp-validation-for="Balance" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
        }  