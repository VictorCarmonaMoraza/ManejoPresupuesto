@model Categoria

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Crear Categoria";
}

<h1>@ViewData["Title"]</h1>
<h5>
    La categoria nos permite indicar en que gastamos nuestro dinero,
    tambien, de donde provienen nuestros ingresos.
</h5>

<form asp-action="Crear">
    <div asp-validation-summary="ModelOnly" class="text-danger">
    </div>

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>

        <div class="mb-3">
            <label asp-for="TipoOperacionId" class="form-label"></label>
            <select asp-for="TipoOperacionId" asp-items="Html.GetEnumSelectList<TipoOperacion>()"
                    class="form-select">
                <span asp-validation-for="TipoOperacionId" class="text-danger"></span>
            </select>
        </div>

        <button class="btn btn-primary">Enviar</button>
        <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
        }  